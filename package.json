{
  "displayName": "Homebridge Merlin",
  "name": "homebridge-merlin",
  "version": "1.0.0",
  "description": "Merlin plugin for homebridge: https://homebridge.io/",
  "main": "dist/index.js",
  "license": "GPL-3.0",
  "author": {
    "name": "Guoqing Lu",
    "email": "redelva2008@163.com",
    "url": "https://github.com/redelva/"
  },
  "scripts": {
    "clean": "rimraf ./dist ./coverage",
    "build": "rimraf ./dist ./coverage && tsc",
    "packlist": "npm pack --dry-run && rm *.tgz",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "test": "jest --coverage",
    "watch:tests": "jest --watch",
    "lint": "eslint **/*.ts --fix",
    "prepare": "npm run build",
    "prepublishOnly": "npm run lint",
    "postpublish": "npm run clean"
  },
  "keywords": [
    "homebridge-plugin"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/redelva/homebridge-merlin"
  },
  "bugs": {
    "url": "https://github.com/redelva/homebridge-merlin/issues"
  },
  "engines": {
    "node": ">=10",
    "homebridge": ">=1.0.0"
  },
  "files": [
    "LICENSE",
    "dist/**/*",
    "config.schema.json"
  ],
  "dependencies": {
    "@spacepumpkin/asus-router-api": "^1.200602.1",
    "axios": "^0.20.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.14",
    "@types/node": "14.11.2",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-jest": "^24.0.2",
    "eslint-plugin-prettier": "^3.1.4",
    "homebridge": "^1.2.3",
    "jest": "^26.4.2",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.1",
    "typescript": "^4.0.3"
  }
}
